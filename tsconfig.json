{
    "compilerOptions": {
      "target": "ES6",                    
      "module": "ESNext",                 
      "moduleResolution": "node",         
      "jsx": "react",                     
      "declaration": true,                
      "declarationDir": "./dist/types",   
      "outDir": "./dist",                 
      "esModuleInterop": true,            
      "skipLibCheck": true,               
      "strict": true                      
    },
    "include": [
      "source/**/*.tsx"                   
    ],
    "exclude": [
      "node_modules"                      
    ]
  }
  